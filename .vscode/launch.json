{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "디버그 실행 (외부 콘솔)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/main",  // 실행 파일 경로
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,   // ✅ 요게 핵심!
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build"  // 빌드 task 이름이랑 맞춰야 함
    }
  ]
}
